@model Library.ViewModels.MagazineViewModels.AddMagazineViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="page-header">Add Magazine</h1>

<div class="row placeholders">
    @using (Html.BeginForm())
    {
        <p style="padding:5px;"></p>
            <div class="col-xs-12 col-sm-2">
            </div>
            <div class="col-xs-12 col-sm-9">
                <form class="form-horizontal" role="form">

                    <div class="row">
                        <p style="padding:5px;"></p>
                        <div class="form-group">
                            <label for="category" class="col-sm-3 control-label">Name</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <p style="padding:5px;"></p>
                        <div class="form-group">
                            <label for="categoryNumberAdd" class="col-sm-3 control-label">Author</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(x => x.Author, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <p style="padding:5px;"></p>
                        <div class="form-group">
                            <label for="categoryNameAdd" class="col-sm-3 control-label">Magazine Number</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(x => x.MagazineNumber, new { @class = "form-control", required = "required", @type = "number" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <p style="padding:10px;"></p>
                        <div class="form-group">
                            <div class="col-sm-3">
                            </div>

                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-warning">Add Magazine</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>



    }

</div>


